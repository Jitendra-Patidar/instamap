<div class="insta_user center alert alert-success"><h3><%= @media.user.username %></h3></div>
<div class="span6">
	<%= image_tag @media.images.standard_resolution.url.to_s, height: 500, width: 500 %>
</div>
<div class="span6">
	<% @comments.each do |comment| %>
		<div class="media">
	  	<a class="pull-left" href="#">
	    	<%= image_tag comment.from.profile_picture.to_s, height: 64, width: 64 %>
	  	</a>
	  	<div class="media-body">
	    	<h4 class="media-heading"><%= comment.from.username %></h4>
	    	<%= comment.text %>
	  	</div>
		</div>
	<% end %>
</div>