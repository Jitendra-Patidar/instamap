!!!
%html.no-js
  %head
    = render 'layouts/meta'
  %body
    #loading
      = image_tag 'ajax-loader.gif'
    #responsive_part
      %ul.nav.responsive
        %li
          %btn.btn.btn-la1rge.btn-i1nfo.responsive_menu.icon_item{ data: { toggle: 'collapse', target: '#sidebar' } }
            %i.icon-reorder
    #sidebar.collapse
      .logo
        %a{ href: root_path }= image_tag 'logo.png', alt: 'Instamap is the best web interface to find Instagram photos on the web with Google Maps.', title: 'Instamap is the best web interface to find Instagram photos on the web with Google Maps.'
      %ul#sidebar_menu.navbar.nav.nav-list.sidebar_box
        = render 'layouts/sidebar'
    #main
      .container
        .container_top
          .row-fluid
            .top_bar_stats.to_hide_tablet
              .stats
                = render 'layouts/social_buttons'
            .top_right
              = render 'layouts/navi'
        = yield
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = render 'layouts/scripts'