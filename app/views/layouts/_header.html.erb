<div class="navbar navbar-static-top">
<%= image_tag "beta.png", id: "beta" %>
<%= link_to "Instamap", root_path, id: "logo" %>
<% if session[:user] %>
	<div id="login" class="btn-group pull-right">
		<%= image_tag "about.png", id: "about_us", height: 30, width: 30, class: "pull-right" %>
		<a class="btn btn-small btn-info dropdown-toggle" data-toggle="dropdown" href="#">
	    <i class="icon-user icon-white"></i> <%= session[:user].username %>
	    <span class="caret"></span>
	  </a>	  
	  <ul class="dropdown-menu">
	  	<li><%= link_to raw("<i class=\"icon-book\"></i>") + " Profile", show_path(session[:user].username) %></li>
	    <li><%= link_to raw("<i class=\"icon-eject\"></i>") + " Logout", logout_path %></li>
	  </ul>
	</div>
<% else %>
	<div id="login" class="btn-group pull-right">
		<%= image_tag "about.png", id: "about_us", height: 30, width: 30, class: "pull-right" %>
	  <a class="btn btn-small btn-info dropdown-toggle" data-toggle="dropdown" href="#">
	    <i class="icon-user icon-white"></i> Account
	    <span class="caret"></span>
	  </a>
	  <ul class="dropdown-menu">
	    <li><%= link_to raw("<i class=\"icon-bookmark\"></i>") + " Login", login_path %></li>
	  </ul>
	</div>
<% end %>
<%= form_tag "/", class: "search pull-right" do %>
	<%= text_field_tag "geocode_address", "", class: "input-xxlarge", placeholder: "Search by street address, a landmark, a city, etc" %>
	<%= submit_tag "Search", class: "search_btn btn btn-small btn-danger" %>
<% end %>
